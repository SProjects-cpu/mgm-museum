# ================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env.local and fill in your actual values
# ================================================

# ================================================
# SUPABASE CONFIGURATION (REQUIRED)
# ================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=mgm-museum-storage

# ================================================
# APPLICATION URLS (REQUIRED)
# ================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:3000/api/graphql

# ================================================
# EMAIL SERVICES (REQUIRED)
# ================================================
# Primary email service (Resend) - REQUIRED
RESEND_API_KEY=re_your_api_key
FROM_EMAIL=MGM Science Centre <noreply@mgmapjscicentre.org>

# Backup email service (SMTP/Nodemailer) - OPTIONAL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_SECURE=false

# ================================================
# SMS/MESSAGING SERVICES (OPTIONAL)
# ================================================
# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ================================================
# DATABASE ENCRYPTION (REQUIRED)
# ================================================
# Database Encryption Key (for encrypting sensitive payment credentials)
# Generate a strong random key: openssl rand -base64 32
DATABASE_ENCRYPTION_KEY=your-strong-encryption-key-here

# ================================================
# PAYMENT SERVICES (REQUIRED FOR BOOKINGS)
# ================================================
# Razorpay Credentials (Legacy - will be migrated to database)
# These can be removed after migrating credentials to admin panel
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# IMPORTANT: After deploying the new migration, Razorpay credentials should be:
# 1. Added via the Admin Panel > Payment Settings page
# 2. Encrypted and stored in the database
# 3. Environment variables can be kept as fallback but database takes precedence

# ================================================
# APPLICATION SETTINGS
# ================================================
NODE_ENV=development

# ================================================
# LOGGING AND MONITORING (OPTIONAL)
# ================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
